<table cellpadding='17' cellspacing='0' width="100%" height="100%" bgcolor="#cecece" border="0">
    <tr>
        <td bgcolor="#ffffff" align="center" valign="top">
            <table cellpadding='0' cellspacing='1' width="99%" bgcolor="#dedede">
            <tr bgcolor="#ffffff">
                  <td align="left"><table><tr bgcolor="#ffffff"><td width="15" align="left"><img src="/images/page_white_add.png" border="0"></td><td align="left"><strong>Добавить страницу</strong></td></tr></table></td>
            </tr>
            </table>

            <form name="f1" action="{PATH}" method="post" ENCTYPE="multipart/form-data" target="_parent">
            <input type="hidden" name="action1" value="image" />
            <table cellpadding='3' cellspacing='1' width="99%" bgcolor="#dedede">
                <tr>
                  <td style="background-color: #EBEBEB;" class="tsimple" align="left" width="180">Заголовок страницы (title)*</td>
                  <td align=left style="background-color: #F7F7F7;"><input style="width:100%;" name="title" type="text" /></td>
                </tr>
                <tr>
                  <td style="background-color: #EBEBEB;" class="tsimple" align="left" width="180">Название страницы (content)*</td>
                  <td align=left style="background-color: #F7F7F7;"><input style="width:100%;" name="name" type="text" /></td>
                </tr>
            </table>

            <br>

            <table cellpadding='0' cellspacing='1' width="99%" bgcolor="#dedede">
                <tr bgcolor="#ffffff">
                  <td align="left"><table><tr bgcolor="#ffffff"><td width="15" align="left"><img src="/images/chart_curve_go.png" border="0"></td><td align="left"><strong>Данные SEO</strong></td></tr></table></td>
                </tr>
            </table>

            <table cellpadding='3' cellspacing='1' width="99%" bgcolor="#dedede">
                <tr>
                  <td style="background-color: #EBEBEB;" class="tsimple" align="left" width="180">Ключевые слова (keywords)*</td>
                  <td align=left style="background-color: #F7F7F7;"><input style="width:100%;" name="keywords" type="text" /></td>
                </tr>
                <tr>
                  <td style="background-color: #EBEBEB;" class="tsimple" align="left" width="180">Описание (description)*</td>
                  <td align=left style="background-color: #F7F7F7;"><input style="width:100%;" name="description" type="text" /></td>
                </tr>
            </table>

            <br>

            <table cellpadding='0' cellspacing='1' width="99%" bgcolor="#dedede">
                <tr bgcolor="#ffffff">
                  <td align="left"><table><tr bgcolor="#ffffff"><td width="15" align="left"><img src="/images/wrench.png" border="0"></td><td align="left"><strong>Параметры страницы</strong></td></tr></table></td>
                </tr>
            </table>

            <table cellpadding='3' cellspacing='1' width="99%" bgcolor="#dedede">
                <tr>
                  <td style="background-color: #EBEBEB;" class="tsimple" align="left" width="180">Статус раздела</td>
                  <td align=left style="background-color: #F7F7F7;"><input style="padding:0;margin:0;" name="status" type="checkbox" /></td>
                </tr>
                <tr bgcolor="#ffffff">
	              <td colspan="2" class='t1' align="center" bgcolor="#ffffff"><input name="save" type="submit" value="Сохранить"></td>
                </tr>
            </table>
            </form>
        </td>
    </tr>
</table>
